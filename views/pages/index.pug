extends ../layout

block content
  // Container (index-btn-group)
  #top.container-fluid
    .btn-group.btn-group-justified(role='group', aria-label='index-btn-group')
      a.btn.btn-default.btn-lg(href='#bestprof' role='button') Best prof
      a.btn.btn-default.btn-lg(href='#review' role='button') View review
      a.btn.btn-default.btn-lg(href='/pages/create' role='button') Create New Review
  hr   
  // Container (Bestprof Section)
  #bestprof.container-fluid.text-center
    h2 Best professor
    br
    h4 Top 3
    .row.text-center.slideanim
      .col-sm-4
        .thumbnail
          img(src='http://unknews.unk.edu/wp-content/uploads/2016/04/Otto-Olsen-2.jpg', alt='Paris', width='400', height='300', style='\height: 230px;\
          ')
          p
            strong Otto olsen
          p Professor of Computer Science
      .col-sm-4
        .thumbnail
          img(src='http://www.nebraskalife.com/CC-24therd-Kearney-Town-Story-2012-0258.jpg', alt='New York', width='400', height='300', style='\height: 230px;\
          ')
          p
            strong Calvin Ryan
          p Professor of history of library
      .col-sm-4
        .thumbnail
          img(src='http://www.jigzone.com/p/jz/jzI/Antelope_Head_On_0213.jpg', alt='San Francisco', width='400', height='300', style='\height: 230px;\
          ')
          p
            strong Antelope
          p Professor of Kearney
      br
      h2 What our users say
      #myCarousel.carousel.slide.text-center(data-ride='carousel')
        // Indicators
        ol.carousel-indicators
          li.active(data-target='#myCarousel', data-slide-to='0')
          li(data-target='#myCarousel', data-slide-to='1')
          li(data-target='#myCarousel', data-slide-to='2')
        // Wrapper for slides
        .carousel-inner(role='listbox')
          .item.active
            h4
              | "best professor about Computer science ever!!"
              br
              span Michael Roe, Computer Science student
          .item
            h4
              | "He is the core of knowledge."
              br
              span John Doe, Library worker
          .item
            h4
              | "If you study in Kearney, You must take his class!"
              br
              span Rabbit, Animal
        // Left and right controls
        a.left.carousel-control(href='#myCarousel', role='button', data-slide='prev')
          span.glyphicon.glyphicon-chevron-left(aria-hidden='true')
          span.sr-only Previous
        a.right.carousel-control(href='#myCarousel', role='button', data-slide='next')
          span.glyphicon.glyphicon-chevron-right(aria-hidden='true')
          span.sr-only Next
  hr
  // Container (Review Section)
  #review.container-fluid
    .row.slideanim
      h1= title
      hr
      .col-md-offset-10
        a.btn.btn-default.btn-lg(href='/pages/create' role='button') Create New Review
      ul
        if(docs != null)
          each doc in docs
            li 
              a(href="/pages/view/" + doc.id)= doc.course 
                |  - 
                =doc.professor
                |  - 
                =doc.ratingCourse
        else 
          h3 We can't find any matching data!
    
  footer.container-fluid.text-center
    a(href='#myPage', title='To Top')
      span.glyphicon.glyphicon-chevron-up
  script.
    $(document).ready(function(){
    // Add smooth scrolling to all links in navbar + footer link
    $(".navbar a, footer a[href='#myPage']").on('click', function(event) {
    // Make sure this.hash has a value before overriding default behavior
    if (this.hash !== "") {
    // Prevent default anchor click behavior
    event.preventDefault();
    // Store hash
    var hash = this.hash;
    // Using jQuery's animate() method to add smooth page scroll
    // The optional number (900) specifies the number of milliseconds it takes to scroll to the specified area
    $('html, body').animate({
    scrollTop: $(hash).offset().top
    }, 900, function(){
    // Add hash (#) to URL when done scrolling (default click behavior)
    window.location.hash = hash;
    });
    } // End if
    });
    $(window).scroll(function() {
    $(".slideanim").each(function(){
    var pos = $(this).offset().top;
    var winTop = $(window).scrollTop();
    if (pos < winTop + 600) {
    $(this).addClass("slide");
    }
    });
    });
    })  
  